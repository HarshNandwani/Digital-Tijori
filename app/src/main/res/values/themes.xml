<resources>
    <style name="Theme.DigitalTijori" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/royal_blue</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Theme.DigitalTijori.BottomBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/royal_blue</item>
        <item name="android:navigationBarColor">@color/royal_blue</item>
    </style>

    <style name="Theme.DigitalTijori.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DigitalTijori.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DigitalTijori.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
